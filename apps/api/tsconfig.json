{
	"compilerOptions": {
		"outDir": "./build",
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"incremental": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src", "api", "drizzle.config.ts"],
	"exclude": ["**/node_modules", "**/.*/"],
	"tsc-alias": { "resolveFullPaths": true }
}
