{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"globalEnv": [
		"DATABASE_URL",
		"CLIENT_ORIGIN",
		"COOKIE_SECRET",
		"TOKEN_SECRET",
		"COOKIE_EXP",
		"TOKEN_EXP"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build:lib"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist", "build"]
		},
		"build:lib": {
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/lib"]
		},
		"lint": {
			"dependsOn": ["^lint"],
			"outputs": [".eslintcache"]
		},
		"check:types": {
			"dependsOn": ["^check:types"]
		},
		"check:unused": {
			"dependsOn": ["^check:unused"]
		},
		"dev": {
			"dependsOn": ["^build:lib"],
			"cache": false,
			"persistent": true
		}
	}
}
